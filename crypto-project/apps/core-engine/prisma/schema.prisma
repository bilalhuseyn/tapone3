// Dosya: apps/core-engine/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ==========================================
// 1. WIDGET MODU (Misafir Girişi İçin)
// ==========================================
model GuestTransaction {
  id        String   @id @default(uuid())
  amountIn  Decimal
  amountOut Decimal
  status    String   @default("COMPLETED") 
  createdAt DateTime @default(now())
}

// ==========================================
// 2. PRO TRADE MODU (Uyumluluk İçin)
// ==========================================

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  accounts  Account[] 
}

model Account {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  currency      String   // ENUM DEĞİL, STRING YAPTIK (SQLite için)
  balance       Decimal  @default(0)
  lockedBalance Decimal  @default(0) 
  createdAt     DateTime @default(now())

  @@unique([userId, currency]) 
}

model Transaction {
  id             String   @id @default(uuid())
  amountIn       Decimal
  amountOut      Decimal
  feeAmount      Decimal  @default(0)
  rate           Decimal
  type           String   // ENUM DEĞİL, STRING YAPTIK (SQLite için)
  status         String   @default("PENDING") // ENUM DEĞİL, STRING YAPTIK
  idempotencyKey String?  @unique 
  createdAt      DateTime @default(now())
}

